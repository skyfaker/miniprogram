/**index.wxss**/

page {
  background: rgba(233, 242, 243, 0.863);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.list {
  margin-top: 75rpx;
  width: 750rpx;
  height: 580rpx;
}

.itemImg {
  position: absolute;
  display: block;
  width: 650rpx;
  height: 487.5rpx;
  border-radius: 30rpx;
  /* z-index: 5; */
  opacity: 1;
  top: 1%;
}

.active {
  opacity: 1;
  /* z-index: 10; */
  /* width: 650rpx; */
  height: 487.5rpx;
  border-radius: 30rpx;
  top: 1%;
  transition: all 0.2s ease-in 0s;
}

.inactive{
  opacity: 0.7;
  /* z-index: 5; */
  height: 400rpx;
  border-radius: 15rpx;
  top: 5%;
}

.uploader {
  margin-top: 200rpx;
  height: 100rpx;
  width: 60%;
  background: rgb(23, 95, 77);
  border: 1px solid rgba(227, 255, 255, 0.623);
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.uploader-text {
  width: 100%;
  line-height: 52px;
  font-weight: bold;
  text-align: center;
  font-size: 50rpx;
  letter-spacing: 10rpx;
  color: rgb(255, 255, 255);
}
